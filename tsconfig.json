{
  "include": ["./src/*"],
  "compilerOptions": {
    "lib": ["dom", "es2016"],
    "jsx": "preserve",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
