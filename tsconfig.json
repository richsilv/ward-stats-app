{
  "include": ["./src/*"],
  "compilerOptions": {
    "types": ["node"],
    "lib": ["dom", "es2016", "WebWorker"],
    "jsx": "preserve",
    "module": "esnext",
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true
  }
}
